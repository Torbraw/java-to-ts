{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*.ts",
    "src/**/*.astro",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.cjs",
    "prettier.config.cjs",
    "tailwind.config.cjs"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}